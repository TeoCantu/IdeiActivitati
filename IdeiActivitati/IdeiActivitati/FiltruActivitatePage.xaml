<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeiActivitati.FiltruActivitatePage">
    <ContentPage.Content>
        <Frame Margin="20"
               CornerRadius="20"
               BackgroundColor="LightSkyBlue">
            <StackLayout>

                <Label Text="Găsește o nouă activitate!"
                       TextColor="White"
                       HorizontalOptions="CenterAndExpand"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       Margin="30" />

                <StackLayout Orientation="Horizontal"
                             Margin="20">
                    <Label Text="Tip"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />

                    <Picker x:Name="tipPicker"
                            VerticalOptions="Center"
                            Margin="20" />
                </StackLayout>

                <StackLayout Orientation="Vertical"
                             Margin="20">

                    <StackLayout Orientation="Horizontal">
                        <Label  x:Name="CheckBoxParticipantiLabel"
                                FontAttributes="Bold"
                                VerticalOptions="Center"
                                Text="Număr specific de participanți:">
                        </Label>

                        <CheckBox x:Name="CheckBoxParticipanti"
                                  VerticalOptions="Center"
                                  CheckedChanged="CheckBoxParticipanti_CheckedChanged" />
                    </StackLayout>


                    <StackLayout Orientation="Horizontal">

                        <Label x:Name="ParticipantiLabel"
                               Margin="20"
                               IsVisible="false"
                               FontSize="Micro"
                               Text="Participanți: " />

                        <Stepper Minimum="1"
                                 Maximum="5"
                                 IsVisible="false"
                                 x:Name="stepper"
                                 Increment="1"
                                 ValueChanged="stepper_ValueChanged" />

                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Horizontal"
                             Margin="20">
                    <Label Text="Activitate Gratuită"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />

                    <CheckBox x:Name="GratuitCheckBox"
                              VerticalOptions="Center"
                              Margin="25" />
                </StackLayout>

                <Button Text="Caută"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        BackgroundColor="FloralWhite"
                        VerticalOptions="CenterAndExpand"
                        Clicked="GasesteButton_Clicked"
                        HorizontalOptions="Fill" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>